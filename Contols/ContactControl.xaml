<UserControl x:Class="DesktopContactsApp.Contols.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopContactsApp.Contols"
             mc:Ignorable="d" 
             d:DesignHeight="90
             " d:DesignWidth="300">
    <!--Komentar: za Background ako stavimo #XX pre RGB vrednosti to znaci da mu zadajemo transparency (providnost)-->
    <!--Npr. #FF uopste nije proziran dok je #00 potpuno proziran-->
    <Grid Background="#AAE5E5E5">
        <StackPanel Margin="5">
            <!--Komentar: za {Binding ...} ne radi InteliSense pa moras rucno da kucas naziv Property-ja-->
            <TextBlock x:Name="nameTextBlock"
                       Text="Name Lastname"
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBlock x:Name="emailTextBlock"
                       Text="example@domain.com"
                       FontSize="15"
                       Foreground="DodgerBlue"/>
            <TextBlock x:Name="phoneTextBlock"
                       Text="011 111 222"
                       FontSize="15"
                       FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
